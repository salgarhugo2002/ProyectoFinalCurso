    <body onload="construirPublicaciones()">


        <%- include("../templates/menu") %>



            <div class="container-fluid" ; style="height: 500px;">

                <div class="left-div">
                    <h1> Home de <%= user.name %></h1>
                    <p>En esta pagina tendras toda la informacion relevante a tus publicaciones </p>

                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                        Crear Publicacion
                    </button>
                </div>

                <div class="right-div text-break container-fluid">
                    <div class="row">
                        <h2>Publicaciones Activas</h2>
                        <div class="col">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>TÃ­tulo</th>
                                        <th>Caducidad</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody id="listado_publicaciones">
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>


            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <form id="formulario">
                        <div class="modal-content">

                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Crear Publicacion</h5>

                                </button>
                            </div>
                            <div class="modal-body">

                                <div class="form-group">
                                    <label for="titulo">Titulo del anuncio</label>
                                    <input type="text" class="form-control" id="titulo" name="titulo"
                                        placeholder="Titulo" required>
                                </div>
                                <div class="form-group">
                                    <label for="texto">Descripcion del puesto</label>
                                    <textarea class="form-control" id="texto" name="texto" rows="10"
                                        required></textarea>
                                </div>
                                <div class="form-group">
                                    <label for="filtroEstudios">Estudios</label>
                                    <input type="text" class="form-control" id="filtroEstudios" name="filtroEstudios"
                                        placeholder="SMX" required>
                                </div>
                                <div class="form-group">
                                    <label for="filtroMunicipio">Municipio</label>
                                    <input type="text" class="form-control" id="filtroMunicipio" name="filtroMunicipio"
                                        placeholder="Girona" required>
                                </div>

                                <div class="form-group">
                                    <label for="tipo">Tipo de practicas</label>
                                    <select class="form-control" id="tipo" name="tipo" required>
                                        <option>FCT</option>
                                        <option>DUAL</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="titulo">Caducidad</label>
                                    <input class="form-control" type="date" name="caducidad" id="caducidad" required>
                                </div>

                                <input type="text" name="idc" id="idc" value="<%= user._id %>" hidden>
                                <br>


                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary">Submit</button>

                            </div>
                    </form>
                </div>
            </div>

            <input type="text" id="id" value="<%= user._id %>" hidden>

