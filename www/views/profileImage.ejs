<%- include("./templates/cabecera") %>
</head>

<body>
    <div class="container p-4">
        <div class="row">
            <div class="col-md-4 offset-md-4">
                <div class="card">
                    <img src="<%= image.path %>" class="card-img-top" alt="">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= image.title %>
                        </h5>
                        <p class="card-text">
                            <%= image.description %>
                        </p>
                        <p class="card-text">
                            <%= format(image.created_at) %>
                        </p>
                        <a href="/profile" class="btn btn-primary">Ir al perfil</a>
                        <a href="/image/<%= image._id %>/delete"><button type="submit" class="btn btn-danger">Borrar imatge</button></a>
                    </div>
                </div>
            </div>
           


        </div>
    </div>
</body>

</html>